<% provide( :title, 'Sign in' ) %>

<section>
	<h1>Sign in</h1>

	<%= form_tag sessions_path do %>

		<%= label_tag :username %>
		<%= text_field_tag :username, '', id: "usernamePrime" %>
		<br>
		<%= label_tag :password %>
		<%= password_field_tag :password, '', id: "passwordPrime" %>
		<br>
		<%= submit_tag 'Sign In', id:"signinPrime" %>
		<a href='#'>Forgot?</a>
	<% end %>

</section>