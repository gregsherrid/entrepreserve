<%= render 'shared/error_messages', object: @user %>

<div class="row">
	<div class="span4">
		<%= f.label :username %>
		<%= f.text_field :username, class:"span4" %>
	</div>
	<div class="span4">
		<%= f.label :email %>
		<%= f.text_field :email, class:"span4" %>
	</div>
</div>

<div class="row">
	<div class="span4">
		<%= tooltip_label f.label(:first_name), "By default, only your username is visable on this site." %>
		<%= f.text_field :first_name, class:"span4" %>
	</div>
	<div class="span4">
		<%= f.label :last_name %>
		<%= f.text_field :last_name, class:"span4" %>
	</div>
</div>

<div class="row">
	<div class="span4">
		<%= f.label :password %>
		<%= f.password_field :password, class:"span4" %>
	</div>
	<div class="span4">
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation, class:"span4" %>
	</div>
</div>